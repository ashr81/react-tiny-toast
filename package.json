    "url": "https://github.com/ashr81/react-tiny-toast/issues"
  },
  "homepage": "https://github.com/ashr81/react-tiny-toast#readme",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
