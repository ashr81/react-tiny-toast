{
  "name": "react-tiny-toast",
  "version": "1.0.2",
  "private": false,
  "main": "lib/index.js",
  "module": "lib/index.js",
  "license": "MIT",
  "author": "ashr81",
  "babel": {
    "presets": [
      "@babel/react",
      "@babel/preset-typescript"
    ]
  },
  "types": "lib/types/react-tiny-toast.d.ts",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "typescript": "^3.9.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0 <17.0",
    "react-dom": ">=16.8.0 <17.0"
  },
  "scripts": {
